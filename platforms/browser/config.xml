<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.webviewersample" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>WebViewerCordovaSample</name>
    <description>
        A sample WebViewer app in Cordova.
    </description>
    <author email="support@pdftron.com" href="https://www.pdftron.com">
        PDFTron Systems Inc.
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
</widget>
